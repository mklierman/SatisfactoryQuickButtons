<UserControl x:Class="SatisfactoryQuickButtons.OptionsPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Satisfactory Quick Buttons Settings" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <GroupBox Grid.Row="1" Header="Notifications" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox x:Name="EnableToastNotificationsCheckBox" 
                          Content="Enable Toast Notifications"
                          IsChecked="{Binding EnableToastNotifications}"
                          Margin="0,5"/>
                <TextBlock Text="Show Windows toast notifications when builds complete" 
                           Foreground="Gray" 
                           FontSize="11" 
                           Margin="20,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Notification Duration (seconds):" 
                           VerticalAlignment="Center" 
                           Width="200"/>
                    <TextBox x:Name="NotificationDurationTextBox" 
                             Text="{Binding NotificationDurationSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="100" 
                             VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="How long notifications should be displayed (1-60 seconds)" 
                           Foreground="Gray" 
                           FontSize="11" 
                           Margin="20,0,0,5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Mod dlls to copy" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Satisfactory Steam Install Location:" 
                           VerticalAlignment="Center" 
                           Width="250"/>
                    <TextBox x:Name="SatisfactorySteamInstallLocationTextBox" 
                             Text="{Binding SatisfactorySteamInstallLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             MinWidth="400"
                             Margin="5,0,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Satisfactory Epic Install Location:" 
                           VerticalAlignment="Center" 
                           Width="250"/>
                    <TextBox x:Name="SatisfactoryEpicInstallLocationTextBox" 
                             Text="{Binding SatisfactoryEpicInstallLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             MinWidth="400"
                             Margin="5,0,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Satisfactory Server Windows Install Location:" 
                           VerticalAlignment="Center" 
                           Width="250"/>
                    <TextBox x:Name="SatisfactoryServerWindowsInstallLocationTextBox" 
                             Text="{Binding SatisfactoryServerWindowsInstallLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             MinWidth="400"
                             Margin="5,0,0,0"/>
                </StackPanel>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                    <ItemsControl x:Name="ModsItemsControl" ItemsSource="{Binding ModItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" 
                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                          Margin="0,3"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </GroupBox>

    </Grid>
</UserControl>

